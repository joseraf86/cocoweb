<!DOCTYPE html>
<html>
  <head>
    <title>Cocoweb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      body {
        font-family: sans-serif;
        margin:0;
      }
      #header-pic {
        max-width: 100%;
      }
      main {
        width: 80%;
        max-width: 45rem;
        margin: auto;
        font-size: 1rem;
      }
      #title-group {
          text-align: center;
      }
      #title {
        margin: 2rem auto .5rem;
        word-break: break-all;
      }
      #description {
        max-width: 35rem;
        margin:0 auto 2rem;
        word-break: normal;
      }
      #flash {
        max-width: 35rem;
        margin:0 auto 2rem;
        word-break: normal;
        text-align: center;
        color: green;
      }
      #survey-form {
        background-color: hsl(0 0% 90%);
        border-radius: 0.5rem;
        padding: 2rem;
        margin-bottom: 2rem;

      }
      label {
        display: flex;
      }

      .question-group {
        margin-bottom: 1.5rem;
      }

      .question {
        margin-bottom: .5rem;
      }

      textarea {
            resize: vertical;
            min-height: 4rem;
      }

      button, select, textarea, #name, #email, #number {
        width:100%;
        padding: 0.3rem 0.5rem;
        border: 1px;
        border-radius: 0.25rem;
        font-size: 1rem;
      }

      button {
        background-color: #245b98;
        color: #ffffff;
        padding: .5rem;
      }

      .radiocheck-label {
        margin: .5rem 0;
      }
    </style>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
